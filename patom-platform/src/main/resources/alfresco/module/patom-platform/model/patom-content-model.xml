<?xml version="1.0" encoding="UTF-8"?>
<model name="pt:contentModel" xmlns="http://www.alfresco.org/model/dictionary/1.0">

    <!-- Optional meta-data about the model -->
    <description>Patom document model</description>
    <author>Karol Pietryka</author>
    <version>1.0</version>

    <imports>
        <!-- Import Alfresco Dictionary Definitions -->
        <import uri="http://www.alfresco.org/model/dictionary/1.0" prefix="d"/>
        <!-- Import Alfresco Content Domain Model Definitions -->
        <import uri="http://www.alfresco.org/model/content/1.0" prefix="cm"/>
        <!-- Import Alfresco System Model Definitions -->
        <import uri="http://www.alfresco.org/model/system/1.0" prefix="sys"/>
    </imports>

    <!-- Custom namespace for the ACME company -->
    <namespaces>
        <namespace uri="http://www.patom.pl/model/content/1.0" prefix="pt"/>
    </namespaces>

<!--    <constraints>-->
<!--    </constraints>-->

    <!-- ===============================================================================================================
        Constraints, Types, and Aspects go here...
        -->

    <types>
        <type name="pt:document">
            <title>Patom document type</title>
            <parent>cm:content</parent>
            <properties>
                <property name="pt:documentId">
                    <title>Document Identification Number</title>
                    <type>d:text</type>
                </property>
                <property name="pt:signCity">
                    <type>d:text</type>
                </property>
                <property name="pt:signDate">
                    <type>d:date</type>
                </property>
            </properties>
<!--            <mandatory-aspects>-->
<!--            </mandatory-aspects>-->
        </type>
        <type name="pt:foodSupplyChainDocument">
            <title>Dokument łańcucha żywieniowego zwierząt do uboju</title>
            <parent>pt:document</parent>
            <mandatory-aspects>
                <aspect>pt:farmOwner</aspect>
                <aspect>pt:farm</aspect>
                <aspect>pt:herd</aspect>
                <aspect>pt:herdTreatment</aspect>
                <aspect>pt:wet</aspect>
                <aspect>pt:herdHistoricMedicalIssues</aspect>
                <aspect>pt:foodSupply</aspect>
            </mandatory-aspects>
        </type>
    </types>
    <aspects>
        <aspect name="pt:farmOwner">
            <properties>
                <property name="pt:farmOwnerFirstName">
                    <title>Imie</title>
                    <type>d:text</type>
                </property>
                <property name="pt:farmOwnerSurname">
                    <title>Nazwisko</title>
                    <type>d:text</type>
                </property>
                <property name="pt:farmOwnerNIP">
                    <title>NIP</title>
                    <type>d:int</type>
                </property>
            </properties>
        </aspect>
        <aspect name="pt:farm">
            <properties>
                <property name="pt:farmZipCode">
                    <title>Kod pocztowy, Poczta</title>
                    <type>d:text</type>
                </property>
                <property name="pt:farmCity">
                    <title>Miasto</title>
                    <type>d:text</type>
                </property>
                <property name="pt:farmStreet">
                    <title>Ulica, nr domu</title>
                    <type>d:text</type>
                </property>
                <property name="pt:farmId">
                    <title>Numer gospodarstwa</title>
                    <type>d:text</type>
                </property>
                <property name="pt:farmBreedingGroundAddress">
                    <title>Adres wylęgarni</title>
                    <type>d:text</type>
                </property>
                <property name="pt:farmBreedingGroundName">
                    <title>Nazwa wylęgarni</title>
                    <type>d:text</type>
                </property>
                <property name="pt:farmBreedingGroundId">
                    <title>Numer weterynaryjny wylęgarni</title>
                    <type>d:text</type>
                </property>
                <property name="pt:ifHerdWellBeingProvided">
                    <title>Czy zwierzętą zapewniono dobrostan</title>
                    <type>d:boolean</type>
                </property>
            </properties>
        </aspect>
        <aspect name="pt:herd">
            <properties>
                <property name="pt:herdRace">
                    <title>Rasa kurcząt</title>
                    <type>d:text</type>
                </property>
                <property name="pt:herdQuantity">
                    <title>Ilość kurcząt</title>
                    <type>d:text</type>
                </property>
                <property name="pt:herdDeploymenDate">
                    <title>Data wstawienia</title>
                    <type>d:date</type>
                </property>
            </properties>
        </aspect>
        <aspect name="pt:herdTreatment">
            <properties>
                <property name="pt:herdMedicals">
                    <title>Stosowane preparaty lecznicze</title>
                    <type>d:text</type>
                    <multiple>true</multiple>
                </property>
                <property name="pt:herdMedicalsTreatmentDates">
                    <title>Kuracja do</title>
                    <type>d:datetime</type>
                    <multiple>true</multiple>
                </property>
                <property name="pt:herdMedicalsApplyingDatesFrom">
                    <title>Czas podawania od</title>
                    <type>d:datetime</type>
                    <multiple>true</multiple>
                </property>
                <property name="pt:herdMedicalsApplyingDatesTo">
                    <title>Czas podawania do</title>
                    <type>d:datetime</type>
                    <multiple>true</multiple>
                </property>
            </properties>
        </aspect>
        <aspect name="pt:wet">
            <properties>
                <property name="pt:wetSurname">
                    <title>Nazwisko weterynarza</title>
                    <type>d:text</type>
                </property>
                <property name="pt:wetCity">
                    <title>Miejscowość weterynarza</title>
                    <type>d:text</type>
                </property>
                <property name="pt:wetPhoneNumber">
                    <title>Numer telefonu weterynarza</title>
                    <type>d:text</type>
                </property>
            </properties>
        </aspect>
        <aspect name="pt:herdHistoricMedicalIssues">
            <properties>
                <property name="pt:ifAnyMedicalIssues">
                    <title>Czy gospodarstwo było objęte rygorem zwalczania chorób zakaźnych i/lub stwierdzano choroby mogące mieć wpływ na bezpieczeństwo żywności</title>
                    <type>d:boolean</type>
                </property>
                <property name="pt:treatRace">
                    <title>Gatunek zwierząt</title>
                    <type>d:text</type>
                </property>
                <property name="pt:historicIssues">
                    <title>Choroba</title>
                    <type>d:boolean</type>
                </property>
                <property name="pt:historicDiseaseDurationTo">
                    <title>Do kiedy</title>
                    <type>d:datetime</type>
                </property>
                <property name="pt:ifAnyMedicalIssuesInButcheredHerds">
                    <title>Czy u zwierząt poddanych dotychczas ubojowi stwierdzono choroby</title>
                    <type>d:boolean</type>
                </property>
                <property name="pt:historicDiseaseInButcheredHerds">
                    <title>Stwierdzone choroby</title>
                    <type>d:text</type>
                </property>
            </properties>
        </aspect>
        <aspect name="pt:foodSupply">
            <properties>
                <property name="pt:starterFeedTimeFrom">
                    <title>Starter podawano od</title>
                    <type>d:datetime</type>
                </property>
                <property name="pt:starterFeedTimeTo">
                    <title>Starter podawano do</title>
                    <type>d:datetime</type>
                </property>
                <property name="pt:growerFeedTimeFrom">
                    <title>Grower podawano od</title>
                    <type>d:datetime</type>
                </property>
                <property name="pt:growerFeedTimeTo">
                    <title>Grower podawano do</title>
                    <type>d:datetime</type>
                </property>
                <property name="pt:finisherFeedTimeFrom">
                    <title>Finiszer podawanoa od</title>
                    <type>d:datetime</type>
                </property>
                <property name="pt:finisherFeedTimeTo">
                    <title>Finiszer podawanoa do</title>
                    <type>d:datetime</type>
                </property>
                <property name="pt:starterName">
                    <title>Nazwa startera</title>
                    <type>d:text</type>
                </property>
                <property name="pt:growerName">
                    <title>Nazwa growera</title>
                    <type>d:text</type>
                </property>
                <property name="pt:finisherName">
                    <title>Nazwa finishera</title>
                    <type>d:text</type>
                </property>
                <property name="pt:foodSource">
                    <title>Pochodzenie paszy</title>
                    <type>d:text</type>
                </property>
            </properties>
        </aspect>
    </aspects>

<!--    <aspects>-->
<!--    </aspects>-->

</model>